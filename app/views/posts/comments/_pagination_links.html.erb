<% if last_result.present? && more_records?(post, last_result) %>
  <%= link_to "Load more", post_comment_path(post, last_result_timestamp: last_result.created_at),
              data: { disabled_with: '<div class="spinner-border text-dark" role="status"><span class="sr-only">Loading...</span></div>' },
              class: "text-muted underline", remote: true %>
<% end %>