const nextPageCommentHTML = "<%= escape_javascript(
  render partial: 'posts/comments/comment', collection: @comments.reverse) %>"
const placeholder = document.createElement('div')
placeholder.innerHTML = nextPageCommentHTML

const updatedPaginationLinksHTML = "<%= escape_javascript(render partial: 'posts/comments/pagination_links',
  locals: { post: @post, last_result: @comments.reverse.first }) %>"

const paginationControls = document.querySelector('[data-behavior="pagination-controls"]')
paginationControls.innerHTML = updatedPaginationLinksHTML
paginationControls.insertAdjacentElement('afterend', placeholder)
